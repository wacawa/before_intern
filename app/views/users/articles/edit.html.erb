<h1 class="text-center">記事の編集</h1>

<div class="col-5">
  <%= form_with(model: @article, url: users_article_path, local: true) do |f| %>
    <div class="form-group pb-1">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group pb-1">
      <%= f.label :content %>
      <%= f.text_area :content, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :image %><br>
      <%= f.file_field :image %>
    </div>

    <%# <div class="col-12 mx-auto py-3"> %>
    <div class="text-center py-3">
      <%= f.submit t(".btn_update"), class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= link_to t('.back'), :back %>
</div>